<UserControl x:Class="RecipesApp.MenuTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipesApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="{StaticResource PrimaryBrush}" Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <Border MouseEnter="EnterButton" MouseLeave="LeaveButton" Padding="15,10,10,10" Background="{StaticResource PrimaryBrush}">
                    <Image x:Name="imageArrow" Source="/Images/arrowWhite.png" Height="14" MouseDown="BackButton" HorizontalAlignment="Left"/>
                </Border>
                <TextBlock x:Name="header" Foreground="{StaticResource WhiteBrush}" VerticalAlignment="Center" FontWeight="Bold" FontSize="13" MouseDown="BackButton">PODPIS</TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
