<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BorderTextBoxForm" TargetType="{x:Type Border}">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource Gray3}"/>
    </Style>

    <Style x:Key="TextBlockLabelForm" BasedOn="{StaticResource TextBlockView}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="6,0,0,4"/>
    </Style>

</ResourceDictionary>